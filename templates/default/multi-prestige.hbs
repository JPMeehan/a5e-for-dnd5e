<div class='prestige'>
  <h3 class='icon'>
    <i class='fa-solid fa-ranking-star'></i>
    <span class='roboto-upper'>
      {{localize 'a5e-for-dnd5e.Prestige.label'}}
    </span>
  </h3>
  <ol>
    {{#each prestige as |prestige i|}}
      <li class='flexrow'>
        {{#if @root.editable}}
          <input
            type='text'
            value='{{prestige.center}}'
            name='flags.a5e-for-dnd5e.prestige.{{i}}.center'
            placeholder='{{localize "a5e-for-dnd5e.Prestige.center"}}'
            data-dtype='String'
          />
          <input
            type='number'
            value='{{prestige.rating}}'
            name='flags.a5e-for-dnd5e.prestige.{{i}}.rating'
            placeholder='1'
            data-dtype='Number'
          />
          <a class='prestige' data-action='delete' data-index='{{i}}'>
            <i class='fa-solid fa-trash'></i>
          </a>
        {{else}}
          <a
            class='prestige'
            data-action='roll'
            data-rating='{{prestige.rating}}'
          >
            {{prestige.center}}:
            {{prestige.rating}}
          </a>
        {{/if}}
      </li>
    {{/each}}
    {{#if editable}}
      <li>
        <a class='prestige' data-action='add'>
          <i class='fa-solid fa-plus'></i>
          {{localize 'a5e-for-dnd5e.Prestige.add'}}
        </a>
      </li>
    {{/if}}
  </ol>
</div>